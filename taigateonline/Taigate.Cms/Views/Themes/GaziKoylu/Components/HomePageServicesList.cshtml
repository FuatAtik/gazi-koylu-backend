@model List<Taigate.Data.Data.Entities.Components.GaziKoylu.ServiceContent>

<div class="row masonry-items">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 col-12 has-animation active-animation">
            <div class="translate-bottom-75 opacity-animation transition-150 transition-delay-100">
                <div class="service-box-layout6">
                    <div class="item-icon">
                        <img src="@item.Logo" alt="Service">
                    </div>
                    <h3 class="item-title">
                        <a href="@item.RedirecUrl">@item.Name</a>
                    </h3>
                    <p>@item.ShortDescription</p>
                    <a href="@item.RedirecUrl" class="btn-text">Localized(Service_Card_Button_Text)<i class="flaticon-next"></i></a>
                </div>
            </div>
        </div>
    }
</div>