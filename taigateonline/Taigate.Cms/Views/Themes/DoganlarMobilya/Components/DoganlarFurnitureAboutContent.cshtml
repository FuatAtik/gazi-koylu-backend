                        string[] fileName = filePath.Split('/');
                        string iamgeName = fileName[^1];
                        int fileExtPos = iamgeName.LastIndexOf(".");
                        if (fileExtPos >= 0)
                        {
                            iamgeName = iamgeName.Substring(0, fileExtPos);
                        }
                        <img class="about-us-img-area-1" src="@Model.Section2CartImage1" alt="@iamgeName" loading="lazy"/>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-5 offset-md-1">
                <div class="vlt-gap-80"></div>
                <!--Animated block-->
                <div class="vlt-animated-block" data-aos="fade" data-aos-delay="0">
                    <p class="fz-4">@Model.Section2CartText1</p>
                </div>
                <div class="vlt-gap-30"></div>
                <!--Animated block-->
                <div class="vlt-animated-block" data-aos="fade" data-aos-delay="100">
                    <p class="fz-3">
                        @Model.Section2CartText2
                    </p>
                </div>
                <div class="vlt-gap-40"></div>
            </div>
            <div class="col-md-5 offset-md-1 pl-0">
