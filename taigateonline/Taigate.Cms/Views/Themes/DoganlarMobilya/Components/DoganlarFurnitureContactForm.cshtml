@model Taigate.Data.Data.Entities.Components.DoganlarMobilya.DoganlarFurnitureContactForm

<section>
  <div class="vlt-gap-120">
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xl-11 offset-xl-1 col-lg-12">
        <!--Animated block-->
        <div class="vlt-animated-block" data-aos="fade" data-aos-delay="0">
          <h2 class="contact-page-title">Localized(Iletisim_Form_Title)
          </h2>
        </div>
        <div class="vlt-gap-60">
        </div>
        <div class="vlt-animated-block" data-aos="fade" data-aos-delay="100">
          <!--Contact form-->
          <div class="vlt-contact-form vlt-contact-form--style-2" >
            <div class="vlt-form-row two-col">
              <div class="vlt-form-group">
                <input
                       class="vlt-form-control"
                       type="text"
                       name="Name" id="Name"
                       required="required"
                       placeholder=" "/>
                <label class="vlt-form-label">@Model.Name</label>
              </div>
              <div class="vlt-form-group">
                <input
                       class="vlt-form-control"
                       type="email"
                       name="Email" id="Email"
                       required="required"
                       placeholder=" "/>
                <label class="vlt-form-label">@Model.Mail </label>
              </div>
            </div>
            <div class="vlt-form-row two-col">
              <div class="vlt-form-group">
                <input class="vlt-form-control" type="tel" name="Phone" id="Phone" placeholder=" "/>
                <label class="vlt-form-label">@Model.PhoneNumber </label>
              </div>
              <div class="vlt-form-group">
                <input
                       class="vlt-form-control"
                       type="text"
                       name="CompanyDegree" id="CompanyDegree"
                       placeholder=" "/>
                <label class="vlt-form-label">@Model.CompanyDegree </label>
              </div>
            </div>
            <div class="vlt-form-row two-col">
              <div class="vlt-form-group">
                <input
                  class="vlt-form-control"
                  type="text"
                  name="Subject" id="Subject"
                  required="required"
                  placeholder=" "/>
                <label class="vlt-form-label">@Model.Title </label>
              </div>
              <div class="vlt-form-group">
                <select class="vlt-form-control" type="text" name="SubjectType" id="SubjectType" name="type1">
                  <option value=""  selected="true" disabled="disabled">Localized(Contact_Form_SubjectType_Title)</option>
                  <option value="1">Localized(Contact_Form_SubjectType_Text1)</option>
                  <option value="2">Localized(Contact_Form_SubjectType_Text2)</option>
                  <option value="3">Localized(Contact_Form_SubjectType_Text3)</option>
                </select>
              </div>
            </div>
            <div class="vlt-form-group">
              <textarea
                        class="vlt-form-control"
                        name="Message" id="Message"
                        rows="4"
                        placeholder=" "
                        ></textarea>
              <label class="vlt-form-label">@Model.Message </label>
            </div>
            <div class="vlt-gap-40">
            </div>
            <div class="contact-cta-wrapper">
              <!--kvkk form-->
              <label class="checkbox">
                <input id="contactGdpr" name="gdpr" type="checkbox" required data-bv-notempty-message="Bu alanÄ± kabul etmelisiniz."/>
                <svg viewBox="0 0 21 18">
                  <symbol
                          id="tick-path"
                          viewBox="0 0 21 18"
                          xmlns="http://www.w3.org/2000/svg">
                    <path
                          d="M5.22003 7.26C5.72003 7.76 7.57 9.7 8.67 11.45C12.2 6.05 15.65 3.5 19.19 1.69"
                          fill="none"
                          stroke-width="2.25"
                          stroke-linecap="round"
                          stroke-linejoin="round"/>
                  </symbol>
                  <defs>
                    <mask id="tick">
                      <use class="tick mask" href="#tick-path"/>
                    </mask>
                  </defs>
                  <use class="tick" href="#tick-path" stroke="currentColor"/>
                  <path
                        fill="white"
                        mask="url(#tick)"
                        d="M18 9C18 10.4464 17.9036 11.8929 17.7589 13.1464C17.5179 15.6054 15.6054 17.5179 13.1625 17.7589C11.8929 17.9036 10.4464 18 9 18C7.55357 18 6.10714 17.9036 4.85357 17.7589C2.39464 17.5179 0.498214 15.6054 0.241071 13.1464C0.0964286 11.8929 0 10.4464 0 9C0 7.55357 0.0964286 6.10714 0.241071 4.8375C0.498214 2.39464 2.39464 0.482143 4.85357 0.241071C6.10714 0.0964286 7.55357 0 9 0C10.4464 0 11.8929 0.0964286 13.1625 0.241071C15.6054 0.482143 17.5179 2.39464 17.7589 4.8375C17.9036 6.10714 18 7.55357 18 9Z"/>
                </svg>
                <svg class="lines" viewBox="0 0 11 11">
                  <path d="M5.88086 5.89441L9.53504 4.26746"/>
                  <path d="M5.5274 8.78838L9.45391 9.55161"/>
                  <path d="M3.49371 4.22065L5.55387 0.79198"/>
                </svg>
                <a href="Localized(KVKK_Onay_Text_Url)" target="_blank">
                   <span class="kvkkonaytext">Localized(KVKK_Onay_Text)</span>
                </a>
              </label>
              <!--Button-->
              <div id="submitButton" class="vlt-btn vlt-btn--secondary vlt-btn--lg">@Model.SendButton
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="vlt-gap-120">
  </div>
</section>
