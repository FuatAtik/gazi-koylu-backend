@model Taigate.Crispy.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="pixelstrap">
    <link rel="icon" href="~/_content/Taigate.Crispy/theme/admin/assets/images/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/_content/Taigate.Crispy/theme/admin/assets/images/favicon.png" type="image/x-icon">
    <title>Taiga CMS - Doğanlar - Giriş</title>
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,400i,500,500i,700,700i&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/fontawesome.css">
    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/vendors/icofont.css">
    <!-- Themify icon-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/vendors/themify.css">
    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/vendors/flag-icon.css">
    <!-- Feather icon-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/vendors/feather-icon.css">
    <!-- Plugins css start-->
    <!-- Plugins css Ends-->
    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/vendors/bootstrap.css">
    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/style.css">
    <link id="color" rel="stylesheet" href="~/_content/Taigate.Crispy/theme/admin/assets/css/color-1.css" media="screen">
    <!-- Responsive css-->
    <link rel="stylesheet" type="text/css" href="~/_content/Taigate.Crispy/theme/admin/assets/css/responsive.css">
  </head>
  <body>
    <!-- login page start-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-7"><img class="bg-img-cover bg-center" src="" alt="looginpage"></div>
        <div class="col-xl-5 p-0">
          <div class="login-card">
            <div>
              <div><a class="logo text-left" href="#"><img class="img-fluid for-light" src="/themes/doganlar/img/dark-logo.png" alt="looginpage"><img class="img-fluid for-dark" src="/themes/doganlar/img/logo.png" alt="looginpage"></a></div>
              <div class="login-main"> 
                <form class="theme-form" asp-controller="Account" asp-action="Login" method="post">
                  <h4>Giriş Yap</h4>
                  <p>E-Posta adresi ve şifre</p>
                  <div asp-validation-summary="All" class="text-danger"></div>
                  <div class="form-group">
                    <label class="col-form-label">E-Posta</label>
                    <input asp-for="Email" class="form-control" type="email" required="" placeholder="Test@gmail.com">
                  </div>
                  <div class="form-group">
                    <label class="col-form-label">Şifre</label>
                    <input asp-for="Password" class="form-control" type="password"  required="" placeholder="*********">
                    <div class="show-hide"><span class="show">                         </span></div>
                  </div>
                  <div class="form-group mb-0">
                    <div class="checkbox p-0">
                      <input id="checkbox1" type="checkbox">
                      <label class="text-muted" for="checkbox1">Beni hatırla</label>
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Giriş Yap</button>
                  </div>
                  @* <h6 class="text-muted mt-4 or">Or Sign in with</h6> *@
                  @* <div class="social mt-4"> *@
                  @*   <div class="btn-showcase"><a class="btn btn-light" href="https://www.linkedin.com/login" target="_blank"><i class="txt-linkedin" data-feather="linkedin"></i> LinkedIn </a><a class="btn btn-light" href="https://twitter.com/login?lang=en" target="_blank"><i class="txt-twitter" data-feather="twitter"></i>twitter</a><a class="btn btn-light" href="https://www.facebook.com/" target="_blank"><i class="txt-fb" data-feather="facebook"></i>facebook</a></div> *@
                  @* </div> *@
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- latest jquery-->
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/jquery-3.5.1.min.js"></script>
      <!-- Bootstrap js-->
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/bootstrap/popper.min.js"></script>
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/bootstrap/bootstrap.js"></script>
      <!-- feather icon js-->
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/icons/feather-icon/feather.min.js"></script>
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/icons/feather-icon/feather-icon.js"></script>
      <!-- Sidebar jquery-->
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/config.js"></script>
      <!-- Plugins JS start-->
      <!-- Plugins JS Ends-->
      <!-- Theme js-->
      <script src="~/_content/Taigate.Crispy/theme/admin/assets/js/script.js"></script>
      <!-- login js-->
      <!-- Plugin used-->
    </div>
  </body>
</html>