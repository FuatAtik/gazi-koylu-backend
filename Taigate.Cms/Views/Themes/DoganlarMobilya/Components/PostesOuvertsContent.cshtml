@model List<Taigate.Data.Data.Entities.Components.DoganlarMobilya.PostesOuvertsContent>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-center">
          <div class="vlt-animated-block" data-aos="fade" data-aos-delay="0">
          </div>
        </div>
        <div class="vlt-gap-60">
        </div>
        <div class="price-accordion" id="accordion">
          <div class="vlt-animated-block" data-aos="fade" data-aos-delay="100">
            @foreach (var contentItem in Model)
            {
              <div class="vlt-award-item">
              <a class="vlt-award-item__link" href="@contentItem.RedirectUrl"></a>
              <div class="vlt-award-item__name">
                @{
                try
                {
                  <p>Raw(contentItem.Title.Substring(0, 120)+"...")</p>
                }
                catch
                {
                  <p>Raw(contentItem.Title)</p>
                }   
                }
              </div>
              <div class="vlt-award-item__category">Localized()
              </div>
              <div class="vlt-award-item__icon">
                <i class="icon-arrow-top-right">
                </i>
              </div>
            </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
