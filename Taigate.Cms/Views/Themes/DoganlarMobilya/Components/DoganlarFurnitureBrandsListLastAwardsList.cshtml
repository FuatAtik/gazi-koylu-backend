<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="text-center">
                <div class="vlt-animated-block" data-aos="fade" data-aos-delay="0">
                    <div class="vlt-section-title vlt-section-title--style-3">
                        <h2 class="vlt-section-title__title">Ödüllerimiz</h2>
                    </div>
                </div>
            </div>
            <div class="vlt-gap-60"></div>
            @foreach (var item in Model)
            {
                <div class="vlt-animated-block" data-aos="fade" data-aos-delay="100">
                    <div class="vlt-award-item">
                        <a class="vlt-award-item__link" href="@item.RedirectUrl"></a>
                        <div class="vlt-award-item__name">
                            @if (item.AwardName.Length > 120)
                            {
                                @item.AwardName.Substring(0, 120)
                            }
                            else
                            {
                                @item.AwardName
                            }
                        </div>
                        <div class="vlt-award-item__category">@item.BrandName</div>
                        <div class="vlt-award-item__icon">
                            <i class="icon-arrow-top-right"></i>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-10 offset-md-1">
            <div class="vlt-gap-40"></div>
            <div class="vlt-animated-block" data-aos="fade" data-aos-delay="200">
                <a
                    class="vlt-simple-link vlt-simple-link--md has-black-color"
                    href="localized(Odullerimiz_Tumunu_Listele_Url)"
                    target="_self">
                    localized(Odullerimiz_Tumunu_Listele_Text)
                    <i class="icon-arrow-top-right">
                    </i
                    >
                </a>
            </div>
        </div>
    </div>
</div>