@model Taigate.Data.Data.Entities.Components.DoganlarMobilya.EnvironmentContent

<div class="common-hero-area">
    <div class="vlt-gap-80"></div>
    <div class="vlt-page-title vlt-page-title--style-2 jarallax">
        <img class="jarallax-img" src="/Files/doganlarmobilya/header/basin_kiti.jpg" alt="Doğanlar Mobilya Grubu İnsan hakları Detay Sayfası" loading="lazy"/>
        <div class="vlt-page-title__overlay"></div>
        <div class="container">
            <h1
                class="vlt-page-title__title lax"
                data-lax-translate-y="0 0, vh (vw*0.25)"
                data-lax-opacity="1 1, (vh*0.5) 0"
                data-lax-anchor=".vlt-page-title">
                Localized(Cevre_Detay_HeroTitle)
            </h1>
        </div>
    </div>
</div>

<section>
    <div class="vlt-gap-120"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-8 offset-lg-2">
                <!--Single post-->
                <article class="vlt-single-post vlt-single-post--style-1">
                    <header class="vlt-single-post__header">
                        <h2 class="vlt-post-title">
                            @Model.Title
                        </h2>
                    </header>
                    <div class="vlt-single-post__content">
                        <div class="vlt-gap-60"></div>
                        Raw(Model.Description)
                    </div>
                    <div class="vlt-gap-70"></div>
                </article>
            </div>
        </div>
    </div>
</section>