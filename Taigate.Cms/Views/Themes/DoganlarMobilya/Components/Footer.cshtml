@model Taigate.Data.Data.Entities.Components.DoganlarMobilya.Footer

<footer class="vlt-footer vlt-footer--fixed">
    <div class="container">
        <div class="footer-list-wrapper">
            <div class="footer-list">
                <h3>Localized(FooterMainTitle1)</h3>
                <ul>
                    Component(FooterAboutList)
                </ul>
            </div>
            <div class="footer-list">
                <h3>Localized(FooterMainTitle2)</h3>
                <ul>
                    Component(FooterBrandList)
                </ul>
            </div>

            <div class="footer-list">
                <h3>Localized(FooterMainTitle3)</h3>
                <ul>
                    Component(FooterInvestorRelationsList)
                </ul>
            </div>
            <div class="footer-list">
                <ul class="footer-bold-list">
                    <li>
                        <a class="list-item" href="@Model.ItemUrl1">@Model.ItemTitle1</a>
                    </li>
                    <li>
                        <a class="list-item" href="@Model.ItemUrl2">@Model.ItemTitle2</a>
                    </li>
                    <li>
                        <a class="list-item" href="@Model.ItemUrl3">@Model.ItemTitle3</a>
                    </li>
                    <li>
                        <a class="list-item" href="@Model.ItemUrl4">@Model.ItemTitle4</a>
                    </li>
                </ul>
            </div>
            <div class="footer-adress">
                <div class="logo">

                    @if (!string.IsNullOrEmpty(Model.LogoPathAltText))
                    {
                        <img src="@Model.LogoPath" alt="@Model.LogoPathAltText"/>
                    }
                    else
                    {
                        string filePath = Model.LogoPath;
                        string[] fileName = filePath.Split('/');
                        string iamgeName = fileName[^1];
                        int fileExtPos = iamgeName.LastIndexOf(".");
                        if (fileExtPos >= 0)
                        {
                            iamgeName = iamgeName.Substring(0, fileExtPos);
                        }
                        <img src="@Model.LogoPath" alt="@iamgeName"/>
                    }


                </div>
                <p>@Model.Address</p>
                <a href="@Model.PhonenumberRedirect">@Model.Phonenumber</a>
                <div class="mail">
                    <a href="mailto:@Model.Email1">@Model.Email1</a>
                    <a href="mailto:@Model.Email2">@Model.Email2</a>
                </div>
            </div>
        </div>
        <div class="copyright-wrapper">
            <div class="policies">
                <a target="_blank" href="@Model.SubItemUrl1">@Model.SubItemTitle1</a>
                <a target="_blank" href="@Model.SubItemUrl2">@Model.SubItemTitle2</a>
                <a target="_blank" href="@Model.SubItemUrl3">@Model.SubItemTitle3</a>
                <a target="_blank" href="@Model.SubItemUrl4">@Model.SubItemTitle4</a>
                <a target="_blank" href="@Model.SubItemUrl5">@Model.SubItemTitle5</a>
                <a target="_blank" href="Localized(SubItemUrl6)">Localized(SubItemTitle6)</a>
                <a target="_blank" href="Localized(SubItemUrl7)">Localized(SubItemTitle7)</a>
            </div>
            <a target="_blank" href="@Model.Logo2Url" class="taiga-logo">

                @if (!string.IsNullOrEmpty(Model.Logo2PathAltText))
                {
                    <img src="@Model.Logo2Path" alt="@Model.Logo2PathAltText"/>
                }
                else
                {
                    string filePath = Model.Logo2Path;
                    string[] fileName = filePath.Split('/');
                    string iamgeName = fileName[^1];
                    int fileExtPos = iamgeName.LastIndexOf(".");
                    if (fileExtPos >= 0)
                    {
                        iamgeName = iamgeName.Substring(0, fileExtPos);
                    }
                    <img src="@Model.Logo2Path" alt="@iamgeName"/>
                }
            </a>
        </div>
    </div>
</footer>

<!--Cursor-->
<div class="vlt-cursor">
    <div class="outer">
        <div class="circle"></div>
    </div>
    <div class="inner">
        <div class="icon">
            <i class="icon-arrow-top-right"></i>
        </div>
    </div>
</div>