@model List<Taigate.Data.Data.Entities.Components.YatirimcilarVerilerArea>

<div class="section-item text-left">
    <div class="container">
        <div class="row horizontal-service-list">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="horizontal-service-item wow fadeInUp investment-image" data-wow-delay=".2s">
                        <div class="horizontal-service-item-title">@item.Text1 <br> @item.Text2</div>
                        <div class="horizontal-service-item-descr text-grey">@item.Description</div>
                        <div class="horizontal-service-item-more">
                            <a class="btn btn-blue btn-sm" href="@item.RedirectUrl">@item.RedirectText <i class="icon ion-ios-arrow-right"></i></a>
                        </div>
                    </div>
                </div> 
            }
        </div>
    </div>
</div>